<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/default_dialog_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:alpha="0.54"
        android:lineSpacingExtra="3.0dip"
        android:text="@string/not_connected_message_for_dialog"
        android:textColor="@color/primary_text"
        android:textSize="14.0sp" />

    <LinearLayout
        android:id="@id/connect"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_cast_black_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/connect_dialog_connect_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/download"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_download" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/connect_dialog_download_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/addAllToPlaylist"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_play_list" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/add_to_queue_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/open_with"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_open_in_new" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/connect_dialog_open_with_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/play_in_app"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_phone_android" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/play_video_in_app" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/more_options"
        style="@style/connect_dialog_button_row">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/connect_dialog_button_icon"
            app:srcCompat="@drawable/my_icon_more_horiz" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/connect_dialog_button_label"
            android:text="@string/connect_dialog_more_options_button" />
    </LinearLayout>
</LinearLayout>