<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="24.0dip"
    android:paddingRight="24.0dip">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/rate_us_text_view"
                android:text="@string/rate_dialog_we_love_to_hear_from_you" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/rate_app"
        style="@style/rate_us_button"
        android:layout_marginTop="20.0dip"
        android:drawableLeft="@drawable/my_icon_mood_good"
        android:text="@string/i_love_it_rate_us_dialog_button"
        app:backgroundTint="@color/green_400" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/report_problem"
        style="@style/rate_us_button"
        android:drawableLeft="@drawable/my_icon_mood_bad"
        android:text="@string/rate_dialog_report_problem_button_title"
        app:backgroundTint="@color/red_400" />
</LinearLayout>